<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProjectsController</servlet-name>
        <servlet-class>com.gestorsye.controllers.ProjectsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertProjects</servlet-name>
        <servlet-class>com.gestorsye.controllers.InsertProjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProjects</servlet-name>
        <servlet-class>com.gestorsye.controllers.DeleteProjects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProject</servlet-name>
        <servlet-class>com.gestorsye.controllers.ViewProject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersController</servlet-name>
        <servlet-class>com.gestorsye.controllers.UsersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertUsers</servlet-name>
        <servlet-class>com.gestorsye.controllers.InsertUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUsers</servlet-name>
        <servlet-class>com.gestorsye.controllers.DeleteUsers</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProjectsController</servlet-name>
        <url-pattern>/ProjectsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertProjects</servlet-name>
        <url-pattern>/InsertProjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProjects</servlet-name>
        <url-pattern>/DeleteProjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProject</servlet-name>
        <url-pattern>/ViewProject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersController</servlet-name>
        <url-pattern>/UsersController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertUsers</servlet-name>
        <url-pattern>/InsertUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUsers</servlet-name>
        <url-pattern>/DeleteUsers</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
